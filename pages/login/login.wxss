page{
  height: 100%;
  width: 750rpx;
  background-color: white;
}

.head{
  width: 100%;
  height: 380rpx;
  text-align:center;
  line-height: 300rpx;
  background-color: rgb(255,217,62);
  color:white;
  font-size:34rpx;
}
.alert {
  margin: 40rpx 0 60rpx;
  margin-left:120rpx;
}

.alert .alert-title {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 20rpx;
}

.alert-desc {
  display: block;
  list-style: disc inside none;
}

.alert .alert-text {
  display: list-item;
  text-align: -webkit-match-parent;
  font-size: 28rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 400rpx;
  height: 50rpx;
  text-align: center;
  color: #aaa;
}

.authorized{
  position: relative;
  left: 75rpx;
  width: 600rpx;
  height:180rpx;
  margin-bottom: 60rpx;
}

.login{
  position: relative;
  left: 75rpx;
  width: 600rpx;
  height:100rpx;
  line-height: 100rpx;
  background-color: rgb(255,217,62);
  color:white;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  text-align: center;
  font-size:35rpx;
}

.btn{
  width:80%;
  line-height:100rpx;
  margin:20rpx auto;
}

