/* pages/game/game.wxss */
@import "../../public/wxss/iconfont.wxss";
page{
  height: 100%;
  background-color: #f1f1f1;
}
.leave{
  width: 50rpx;
  height: 50rpx;
}
.background{
  z-index: -1;
  position: absolute;
  transform: translate(-50%);
  top: 150rpx;
  /* top: 50%; */
  left: 50%;
  width: 300rpx;
  height: 250rpx;
  /* margin: 0 auto; */
  /* margin-top: 50rpx; */
  display: block;
  opacity: 0.5;
}
.name{
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80rpx;
  white-space: nowrap;
  display: inline-block;
  text-align: center;
}
.user-list{
  height: 15%;
  background-color: white;
  opacity: 0.9;
  z-index: 1;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0rpx 1rpx 2rpx 3rpx #d4d1d4; 
}
.userinfo{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.users{
  display: flex;

}
.users image{
  width: 80rpx;
  height: 80rpx;
}
.talk-content{
  margin-top: 18%;
  height: 65%;
  width: 95%;
  background-color: rgba(255,255,255,0.6);
  margin-left: auto;
  margin-right: auto;
  position: relative;
  /* left: 50%; */
  
}
.word{
  background-color: rgba(213, 213, 187,0.3);
  font-size: 50rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  padding: 20rpx 40rpx;
}
.talk-control{
  align-items: center;
  background-color: white;
  box-shadow: 0rpx -1rpx 2rpx 3rpx #d4d1d4;
  display: flex;
  height: 8%;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}