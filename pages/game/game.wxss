/* pages/game/game.wxss */
@import "../../public/wxss/iconfont.wxss";
page{
  background-color: #f1f1f1;
}
.leave{
  width: 50rpx;
  height: 50rpx;
}
.background{
  z-index: -1;
  position: absolute;
  transform: translate(-50%);
  top: 150rpx;
  /* top: 50%; */
  left: 50%;
  width: 300rpx;
  height: 250rpx;
  /* margin: 0 auto; */
  /* margin-top: 50rpx; */
  display: block;
  opacity: 0.5;
}
.user-list{
  background-color: white;
  opacity: 0.9;
  z-index: 1;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.userinfo{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.users{
  display: flex;

}
.users image{
  width: 80rpx;
  height: 80rpx;
}